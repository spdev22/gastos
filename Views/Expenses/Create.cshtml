@model PersonalExpenses.ViewModels.CreateExpenseModel

@{
    ViewData["Title"] = "Create Expense";
    var model = Model;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Create Expense</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group mb-3">
                            <label asp-for="Expense" class="form-label"> Expense (@(Model.Currency)) </label>
                            <input asp-for="Expense" type="number" class="form-control" min="0.0" />
                            <span asp-validation-for="Expense" class="text-danger"></span>
                        </div>


                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <input asp-for="Description" type="text" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Date" class="form-label"> Date (dd/mm/yy) </label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="CategoryId" class="form-label">Category </label>
                            <select asp-for="CategoryId" class="form-control"
                                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
