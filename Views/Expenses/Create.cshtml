@model PersonalExpenses.ViewModels.CreateExpenseModel

@{
    ViewData["Title"] = "Create Expense";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">Nuevo Gasto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <!-- Monto -->
                        <div class="mb-3">
                            <label asp-for="Expense" class="form-label">
                                Monto (@(Model.Currency))
                            </label>
                            <input asp-for="Expense" type="number" class="form-control" min="0.01" step="0.01" />
                            <span asp-validation-for="Expense" class="text-danger small"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Descripcion</label>
                            <input asp-for="Description" type="text" class="form-control"
                                placeholder="e.g., Grocery, Rent..." />
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Fecha -->
                        <div class="mb-3">
                            <label asp-for="Date" class="form-label">Fecha</label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>

                        <!-- Categoría -->
                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label">Categoria</label>
                            <select asp-for="CategoryId" class="form-select"
                                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                                <option value="">-- Elije una categoria --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                Cancelar
                            </a>
                            <button type="submit" class="btn btn-success">
                                Guardar gasto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-circle-check me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
