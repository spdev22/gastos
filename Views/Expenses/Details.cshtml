@model PersonalExpenses.ViewModels.ExpenseDetailsModel

@{
    ViewData["Title"] = "Detalle del Gasto";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">💸 Detalles del Gasto</h4>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <strong>Descripción:</strong> @Model.Description
            </li>
            <li class="list-group-item">
                <strong>Monto:</strong> @Model.Expense.ToString("C")
            </li>
            <li class="list-group-item">
                <strong>Fecha:</strong> @Model.Date.ToString("dd/MM/yyyy")
            </li>
            <li class="list-group-item">
                <strong>Categoría:</strong> @Model.CategoryName ?? "Sin categoría"
            </li>
        </ul>
        <div class="card-footer d-flex justify-content-between">
            <a class="btn btn-secondary" asp-action="Index">
                ← Volver al listado
            </a>
            <div>
                <a class="btn btn-warning me-2" asp-action="Edit" asp-route-id="@Model.Id">✏️ Editar</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">🗑️ Eliminar</a>
            </div>
        </div>
    </div>
</div>
