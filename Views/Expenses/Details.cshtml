@model PersonalExpenses.ViewModels.ExpenseDetailsModel

@{
    ViewData["Title"] = "Expense Details";
}

<h2>Expense Details</h2>

<div class="card mt-4">
    <div class="card-body">
        <h5 class="card-title">@Model.Description</h5>
        <p class="card-text"><strong>Expense:</strong> $@Model.Expense.ToString("F2")</p>
        <p class="card-text"><strong>Date:</strong> @Model.Date.ToShortDateString()</p>
        <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>